<!-- attendenceview.ejs -->
{{> header1}}
<div class="container-fluid" style="margin-top: 120px;">
  <h1 style="text-align: center;">Attendance of Employee</h1>
  <table class="table table-striped table-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Attendance</th>
      <th scope="col">Date</th>
      <th scope="col">Update</th>
      <th scope="col">Remove</th>
    </tr>
    {{#each pdt}}
      <tr>
        <td>{{this.name}}</td>
        <td>{{this.attendence}}</td>
        <td>{{this.currentdate}}</td>
        <td><a href="/atedit/{{this.at_id}}" onclick="return confirm('Are you sure you want to edit ?')">Edit</a></td>
        <td><a href="/atdelete/{{this.at_id}}" onclick="return confirm('Are you sure you want to delete ?')">Delete</a></td>
      </tr>
    {{/each}}
  </table>
</div>
{{>footer}}